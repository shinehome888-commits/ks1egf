  <!-- JavaScript -->
  <script>
    function showPage(pageId) {
      document.querySelectorAll('.page').forEach(page => {
        page.classList.remove('active-page');
      });
      document.getElementById(pageId).classList.add('active-page');
      document.getElementById('nav-links').classList.remove('active');
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    document.getElementById('mobile-menu').addEventListener('click', () => {
      document.getElementById('nav-links').classList.toggle('active');
    });

    // Prevent default anchor behavior
    document.querySelectorAll('a[href="#"]').forEach(a => {
      a.addEventListener('click', e => e.preventDefault());
    });

    // WhatsApp form submission
    function submitWhatsApp() {
      const input = document.getElementById('userWhatsapp');
      const value = input.value.trim();
      
      if (!value || !value.startsWith('+')) {
        alert('Please enter a valid WhatsApp number with country code (e.g., +233240254680).');
        return;
      }

      const message = `Hi KS1EGF! ðŸ‘‹\n\nPlease add my number to your project update list:\n${value}\n\nIâ€™m excited to receive your 4IR innovations via WhatsApp!`;
      const url = `https://wa.me/233240254680?text=${encodeURIComponent(message)}`;
      window.open(url, '_blank');
    }
  </script>

